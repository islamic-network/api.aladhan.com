{
  "listeners": {
    "*:8080": {
      "pass": "routes/main"
    },
    "*:9090": {
      "pass": "routes/metrics"
    }
  },
  "applications": {
    "api_aladhan_com": {
      "type": "php",
      "user": "nobody",
      "limits": {
        "timeout": 30,
        "requests": 3000000
      },
      "processes": {
        "max": 25,
        "spare": 5,
        "idle_timeout": 5
      },
      "root": "/var/www/html",
      "index": "index.php",
      "script": "index.php"
    },
    "phpinfo": {
      "type": "php",
      "user": "nobody",
      "root": "/var/www/html",
      "index": "phpinfo.php",
      "script": "phpinfo.php"
    },
    "metrics": {
      "type": "php",
      "root": "/var/www/metrics",
      "index": "metrics.php",
      "script": "metrics.php",
      "user": "root",
      "environment": {
        "control_socket": "/var/run/control.unit.sock"
      }
    }
  },
  "routes": {
    "metrics": [
      {
        "match": {
          "uri": [
            "/metrics"
          ]
        },
        "action": {
          "pass": "applications/metrics"
        }
      }
    ],
    "main": [
      {
        "match": {
          "uri": [
            "/timings*",
            "/calendar*",
            "/address*",
            "/city*",
            "/g*",
            "/h*",
            "/methods",
            "/asmaAlHusna",
            "/qibla"
          ]
        },
        "action": {
          "return": 301,
          "location": "/v1$request_uri"
        }
      },
      {
        "match": {
          "uri": [
            "/phpinfo"
          ]
        },
        "action": {
          "pass": "applications/phpinfo"
        }
      },
      {
        "match": {
          "uri": "*"
        },
        "action": {
          "pass": "applications/api_aladhan_com"
        }
      }
    ]
  }
}
